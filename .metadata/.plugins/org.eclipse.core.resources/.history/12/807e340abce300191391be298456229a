#define F_CPU 16000000UL //16 MHZ
#include "avr/io.h"
#include "avr/delay.h"
#include "util/delay.h"

int main() {
	DDRD |= (1 << PIN7); // config pin7 output
	//PORTD = 0xff;
	DDRD &= ~(1 << PIN0); // config pin7 input

	//DDRD &=~ ((1 << PIN0) | (1 << PIN1) | (1<<PIN2)); // config pin7 output

	while (1) {

		if (PIND & (1 << PIN0)) {

			PORTD |=(1<<PIN7);
		}else{
			PORTD &=~(1<<PIN7);
		}

		/*	PORTD |= (1 << PIN0);
		 _delay_ms(500);
		 PORTD &=~ (1 << PIN0);
		 _delay_ms(500);*/
	}

}

