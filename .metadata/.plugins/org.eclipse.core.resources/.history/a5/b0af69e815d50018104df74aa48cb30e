#include "Types.h"
#include "LCDc.h"
#include "Keypad.h"
#define F_CPU 12000000UL
#include <avr/delay.h>

int main(void)
{

	LCD_VidInit();
	Keypad_vidInit();



	while(1)
	{
		for(u8 i=0; i<16; i++)
		{
			if(Keypad_u8GetButtonStatus(i)==1)
			{
				LCD_VidSetPosition(0,0);
				LCD_VidWriteNumber(i);
			}
		}
	}

	return -1;
}
